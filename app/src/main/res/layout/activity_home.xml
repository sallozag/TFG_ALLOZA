<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <LinearLayout
        android:id="@+id/reportInfoLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/helpButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ayuda50"
            android:layout_gravity="right"
            android:clickable="true"
            android:focusable="true" />

        <Space
            android:layout_width="1dp"
            android:layout_height="25dp"/>

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pvd150rem"
            android:layout_gravity="center" />

        <Space
            android:layout_width="1dp"
            android:layout_height="25dp"/>

        <Button
            android:id="@+id/performEvButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="Realizar evaluación"
            android:textColor="@color/black"
            tools:ignore="HardcodedText" />

        <Space
            android:layout_width="1dp"
            android:layout_height="15dp"/>

        <Button
            android:id="@+id/myEvsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="Mis evaluaciones"
            android:textColor="@color/black"
            tools:ignore="HardcodedText" />

        <Space
            android:layout_width="1dp"
            android:layout_height="15dp"/>

        <Button
            android:id="@+id/faqButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="Preguntas frecuentes (FAQ)"
            android:textColor="@color/black"
            tools:ignore="HardcodedText" />

        <Space
            android:layout_width="1dp"
            android:layout_height="35dp"/>

        <Button
            android:id="@+id/logOutButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/acento"
            android:text="Cerrar sesión"
            android:textColor="@color/white"
            tools:ignore="HardcodedText" />

        <Space
            android:layout_width="1dp"
            android:layout_height="35dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>